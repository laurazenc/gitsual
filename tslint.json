{
    "extends": [   
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": [
            false,
            {
                "limit": 100,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        
        "indent": [
            true,
            "tabs",
            4
        ],
        "trailing-comma": [true, {
            "singleline": "never",
            "multiline": "never"
        }],
        "variable-name": false,
        "jsx-alignment": true,
        "jsx-equals-spacing": [true, "never"],
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "member-access": [
            false
        ],
        "member-ordering": [
            false
        ],
        "interface-name": false,
        "object-literal-sort-keys": false,
        "no-console": {
            "severity": "warning"
        }
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}
